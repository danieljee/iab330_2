<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iab330.Views.AddRoom">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="roomName" Placeholder="Room Name"/>
            <Button x:Name="addRoomButton" Text="Add" Clicked="addRoomButton_Clicked"/>
            <StackLayout x:Name="errors">
                
            </StackLayout>
            <ListView x:Name="roomsView" ItemsSource="{Binding Path=Rooms}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical">
                                <Label Text="{Binding Name}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>