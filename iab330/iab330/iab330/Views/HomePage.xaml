<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iab330.Views.HomePage"
             Title="Where's My Stuff?">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="logo.png"/>
            <Button AutomationId="addRoomButton" 
                    x:Name= "addRoomButton" 
                    Text="Add/Remove Room"
                    FontSize="20"
                    HeightRequest="80"
                    WidthRequest="300"
                    Image="room.png"
                    BackgroundColor="Lime"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand" 
                    Clicked="addRoomButton_Clicked"/>
            <Button x:Name= "manageBoxesButton" 
                    Text="Manage Boxes"
                    FontSize="20"
                    HeightRequest="80"
                    WidthRequest="300"
                    Image="box_icon.png"
                    BackgroundColor="SkyBlue"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand" 
                    Clicked="manageBoxesButton_Clicked"/>
            <Button x:Name= "searchButton" 
                    Text="Search"
                    Image="search.png"
                    BackgroundColor="Coral"
                    FontSize="20"
                    HeightRequest="80"
                    WidthRequest="300"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    Clicked="searchButton_Clicked"/>
            <Button x:Name= "helpButton" 
                    Text="Help"
                    Image="help.png"
                    FontSize="20"
                    HeightRequest="80"
                    WidthRequest="300"
                    BackgroundColor="IndianRed"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    Clicked="helpButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>